<div class="container">
  <div class="row justify-content-center">
    <div class="col-10" >
      <%= render 'shared/errors', obj: @resturant%>
      <%= form_with(model: @resturant, class: "shadow p-3 mb-5 bg-white rounded" ,local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :name, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :name, class: "form-control" %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :latitude, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :latitude, class: "form-control"%>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :longitude, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :longitude, class: "form-control"%>
          </div>
        </div>
        <div class="form-group mb-3">
          <%= f.label :category_id , class: "col-2 col-form-label" %>
          <%= f.collection_select :category_id, Category.all, :id, :category_name, prompt: "Select a category", class: "form-control" %>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :cover_image, class: "col-4 form-label" %>
          <%= f.file_field :cover_image , multiple: true, class: "form-control"  %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit class: "btn btn-outline-success btn-lg"%>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Back to Resturants listing ]', resturants_path, class: "text-center" %>
  </div>
</div>
