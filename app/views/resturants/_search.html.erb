<%= form_with(url: search_resturants_path, method: :get) do |form| %>
  <div class="input-group">
    <%= form.label :Location, class: "col-2 col-form-label" %>
    <%= form.text_field :search, placeholder: "City name", value: params[:search], class: "form-control" %>
  </div>
  <div class="input-group">
    <%= form.label :category_id, class: "col-2 col-form-label" %>
    <%= form.collection_select :category_id, Category.all, :id, :category_name, { prompt: "Select a category" }, { class: "form-control" } %>  
  </div>
  
  <%= form.submit "Search", class: "btn btn-outline-warning" %>
<% end %>