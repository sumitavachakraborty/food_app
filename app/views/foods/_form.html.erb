<div class="container">
  <div class="row justify-content-center">
    <div class="col-10" >
      <%= render 'shared/errors', obj: @food%>
      <%= render 'shared/flash' %>
      <%= form_with(model: [@resturant,@food],class: "shadow p-3 mb-5 bg-white rounded" ,local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :food_name, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :food_name, class: "form-control", required: true, pattern: '[A-Za-z\s]+' %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :food_price, class: "col-2 col-form-label" %>
          <div class ="col-2">
            <%= f.number_field :food_price, class: "form-control", required: true, min: 0, step: 0.01 %>
          </div>
        </div>
        <div class="form-group row mb-3">
          <%= f.label :food_image %>
          <%= f.file_field :food_image, accept: 'image/jpeg, image/png' %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit class: "btn btn-outline-success btn-lg"%>
        </div>
      <% end %>
    </div>
    <%= link_to '[ Back to Resturant ]', resturant_path(@resturant), class: "text-center" %>
  </div>
</div>
