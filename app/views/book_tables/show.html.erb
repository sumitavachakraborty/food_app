<div class="container text-center mb-3">
  <%= render 'shared/flash' %>
  <h2 class="text-center my-4"><%= current_user.username%>'s Table Bookings </h2>
  <% @resturant.book_tables.each do |table| %>
    <div class="row justify-content-center mb-3 ">
      <div class="card shadow p-3 mb-5 bg-white rounded" style="width: 18rem;">
        <div class="card-body ">
          <h5 class="card-title"> <strong>Book Date :</strong> <%= table.book_date.strftime('%Y-%m-%d') %> </h5>
          <h6 class="card-subtitle mb-2 text-muted"> <strong>Book time :</strong> <%= table.book_time.strftime('%H:%M') %> </h6>
          <p class="card-text"> <strong> Head Count :</strong> <%= table.head_count %> </p>
          <a href="#" class="card-link"> <%= link_to @resturant.name, resturant_path(@resturant),class: "card-link" %> </a>
        </div>
      </div>
    </div>
  <% end %>
</div>
