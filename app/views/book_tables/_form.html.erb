<div class="container">
  <div class="row justify-content-center">
    <div class="col-8" >
        <%= form_with(model: [@resturant,@book_table],class: "shadow p-3 mb-5 bg-white rounded" ,local: true) do |f| %>  
            <div class="form-group mb-3">
                <%= f.label :book_date, class: "col-2 col-form-label" %>
                <%= f.date_field :book_date, class: "form-control" %>
            </div>

            <div class="form-group mb-3">
                <%= f.label :book_time, class: "col-2 col-form-label" %>
                <%= f.time_field :book_time, class: "form-control" %>
            </div>
            <div class="form-group mb-3">
                <%= f.label :head_count, class: "col-2 col-form-label" %>
                <%= f.number_field :head_count, class: "form-control" %>
            </div>
        
            <div class="d-flex justify-content-center">
                <%= f.submit class: "btn btn-outline-success btn-lg"%>  
            </div>
        <% end %>
    </div>
    </div>
    <%= link_to '[ Back to Resturant ]', resturant_path(@resturant), class: "text-center d-block my-3" %>
</div>