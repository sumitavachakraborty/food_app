<div class="container">
  <div class="row justify-content-center">
    <div class="col-8">
      <%= render 'shared/errors', obj: @book_tables %>
      <%= form_with(model: [@restaurant, @book_tables], class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f| %>
        <div class="form-group mb-3">
          <span class="text-danger">*</span>
          <%= f.label :book_date, class: "col-form-label" %><span class="text-secondary">(Atleast after 5 days)</span>
          <%= f.date_field :book_date, class: "form-control", required: true %>
        </div>
        <div class="form-group mb-3">
          <span class="text-danger">*</span>
          <%= f.label :book_time, class: "col-form-label" %>
          <%= f.time_field :book_time, class: "form-control", required: true %>
        </div>
        <div class="form-group mb-3">
          <span class="text-danger">*</span>
          <%= f.label :head_count, class: "col-form-label" %>
          <%= f.number_field :head_count, min: 1, max: 20, class: "form-control", required: true %>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit 'Book Table', class: "btn btn-outline-success btn-lg" %>
        </div>
      <% end %>
    </div>
  </div>
  <%= link_to '[ Back to Restaurant ]', restaurant_path(@restaurant), class: "text-center d-block my-3" %>
</div>

