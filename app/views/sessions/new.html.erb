<div class="container">
  <%= render 'shared/flash' %>
  <h1 class="text-center mt-4">Enter your Email to Login : </h1>
  <div class="row justify-content-center">
    <div class="col-10" >
      <%= form_with(scope: :session, url: sessions_path, class: "shadow p-3 mb-5 bg-white rounded" ,local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter the email"%>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit "Log in" ,class: "btn btn-outline-success btn-lg"%>
        </div>
      <% end %>
    </div>
  </div>
  <div class="d-flex flex-row my-3 justify-content-center align-items-center mx-auto" style="width: 30rem;">
    <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
    <span class="text-center mx-2">Or</span>
    <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
  </div>
  <div class="d-flex flex-row my-3 justify-content-center align-items-center mx-auto">
    <%= link_to 'Admin Login', admin_login_users_path ,class: "btn btn-outline-danger" %>
  </div>
</div>
