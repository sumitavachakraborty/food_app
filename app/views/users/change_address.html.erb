<div class="my-3">
  <%= render 'shared/flash' %>
  <div class="container card shadow p-3 mb-3 bg-white rounded col-md-6 col-lg-4">
    <%= form_with(url: user_location_path(@user), method: :post, class: "input-group") do |f| %>
      <%= f.text_field 'Pincode', class: "form-control border border-dark", placeholder: "Enter your 7-digit pincode", pattern: "^[1-9][0-9]{5}$", required: true %>
      <div class="input-group-append">
        <button type="submit" class="btn btn-outline-danger"> <%= @user.address.present? ? "Change pincode" : "Add pincode" %>
        </button>
      </div>
    <% end %>
    <div class="container my-3 text-center">
      <% if @user.address.present? %>
        <p class="text-center"> <strong>  Address - </strong><%= @user.address %></p>
      <% else %>
        <span class="text-center"><strong> Please enter the address </strong></span>
      <% end %>
    </div>
  </div>
</div>
