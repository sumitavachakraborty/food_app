  
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10" >
      <%= render 'shared/errors', obj: @user%>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-white rounded",local: true) do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :username, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :username, class: "form-control" , placeholder: "Enter the username"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter the email"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Choose password"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :city, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :city, class: "form-control"%>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account"  ,class: "btn btn-outline-success btn-lg")%> 
        </div>
      <% end %>  
    </div>
  </div>
    <div class="d-flex flex-row my-3 justify-content-center align-items-center mx-auto" style="width: 30rem;">
    <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
    <span class="text-center mx-2">Or</span>
    <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
  </div>
<div class=" justify-content-center mx-auto" style="width: 30rem;">
  <%= form_tag "/auth/google_oauth2" , method: :post do %>
    <button class="btn btn-outline-light d-flex flex-row justify-content-center align-items-center mx-auto shadow-sm border" >
      <%= image_tag "google.png", class: "img-fluid my-2 mx-auto d-block", style: "width: 30px; height: 30px;" %>
      <span class="text-center text-sm px-5 text-muted">Sign up with Google</span>
    </button>
  <% end %>
</div>