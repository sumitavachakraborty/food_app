<div class="container">
  <div class="row justify-content-center">
    <%= render 'shared/flash' %>
    <div class="col-lg-6">
      <div class="card shadow p-3 mb-3 bg-white rounded">
        <div class="card-body">
          <%= render 'shared/errors', obj: @user %>
          <%= form_with(model: @user, url: '/signup', class: "row g-3", local: true) do |f| %>
            <div class="mb-3">
              <span class="text-danger">*</span>
              <%= f.label :username, class: "form-label" %>
              <%= f.text_field :username, class: "form-control", placeholder: "Enter the username", required: true %>
            </div>
            <div class="mb-3">
              <span class="text-danger">*</span>
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter the email", required: true %>
            </div>
            
            <div class="mb-3">
              <span class="text-danger">*</span>
              <%= f.label :city, class: "form-label" %>
              <%= f.text_field :city, class: "form-control", placeholder: "Enter the city name", required: true, pattern: '[A-Za-z\s]+' %>

            </div>
            <div class="mb-3">
              <span class="text-danger">*</span>
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Choose password", required: true %>
            </div>
            <div class="d-grid gap-2">
              <%= f.submit(@user.new_record? ? "Sign up" : "Update account", class: "btn btn-outline-success btn-lg") %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="d-flex flex-row my-3 justify-content-center align-items-center mx-auto" style="width: 30rem;">
    <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
    <span class="text-center mx-2">Or</span>
    <hr class="w-100 mx-2" style="height: 2px; background-color: black"/>
  </div>
  <div class=" justify-content-center mx-auto" style="width: 30rem;">
    <%= form_tag "/auth/google_oauth2" , method: :post do %>
      <button class="btn btn-outline-light d-flex flex-row justify-content-center align-items-center mx-auto shadow-sm border" >
        <%= image_tag "google.png", class: "img-fluid my-2 mx-auto d-block", style: "width: 30px; height: 30px;" %>
        <span class="text-center text-sm px-5 text-muted">Sign up with Google</span>
      </button>
    <% end %>
  </div>
