  
<div class="container">
  <div class="row justify-content-center">
    <div class="col-10" >
      <%= render 'shared/errors', obj: @user%>
      <%= form_with(model: @user, class: "shadow p-3 mb-3 bg-white rounded",local: true) do |f| %>

        <div class="form-group row mb-3">
          <%= f.label :username, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :username, class: "form-control" , placeholder: "Enter the username"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :email, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.email_field :email, class: "form-control", placeholder: "Enter the email"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :password, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.password_field :password, class: "form-control", placeholder: "Choose password"%>
          </div>
        </div>

        <div class="form-group row mb-3">
          <%= f.label :city, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :city, class: "form-control"%>
          </div>
        </div>

        <div class="d-flex justify-content-center">
          <%= f.submit(@user.new_record? ? "Sign up" : "Update account"  ,class: "btn btn-outline-success btn-lg")%> 
        </div>
      <% end %>  
        <% if !logged_in? %>
          <div class="d-flex justify-content-center mb-3">
            <%= button_to "Google", '/auth/google_oauth2' , data: {turbo: false}, class: "btn btn-outline-success btn-lg"%>   
          </div>
        <%end%>
    </div>
  </div>
</div>