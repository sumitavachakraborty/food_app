<div class="container">
  <div class="row justify-content-center">
    <h1 class="text-center mt-4">Admin Login : </h1>
    <div class="col-lg-6">
      <div class="card shadow p-3 mb-3 bg-white rounded">
        <div class="card-body">
          <%= render 'shared/flash' %>
          <%= form_with(url: check_admin_users_url, class: "row g-3", local: true) do |f| %>
            <div class="mb-3">
              <span class="text-danger">*</span>
              <%= f.label :email, class: "form-label" %>
              <%= f.email_field :email, class: "form-control", placeholder: "Enter the email", required: true %>
            </div>
            <div class="mb-3">
              <span class="text-danger">*</span>
              <%= f.label :password, class: "form-label" %>
              <%= f.password_field :password, class: "form-control", placeholder: "Choose password", required: true %>
            </div>
            <div class="d-grid gap-2">
              <%= f.submit "Login", class: "btn btn-outline-success btn-lg" %>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
