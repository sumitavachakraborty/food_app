<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-8 col-lg-6">
      <%= render 'shared/errors', obj: @restaurant %>
      <%= form_with(model: @restaurant, class: "shadow p-3 mb-5 bg-white rounded", local: true) do |f| %>
        <div class="form-group mb-3">
        <span class="text-danger">*</span>
          <%= f.label :name, class: "form-label" %>
          <%= f.text_field :name, class: "form-control", required: true, pattern: '[A-Za-z\s]+'  %>
        </div>
        <div class="form-group mb-3">
        <span class="text-danger">*</span>
          <%= f.label :latitude, class: "form-label" %>
          <%= f.text_field :latitude, class: "form-control", required: true, type: "number", step: "any", pattern: "\\d*" %>
        </div>
        <div class="form-group mb-3">
        <span class="text-danger">*</span>
          <%= f.label :longitude, class: "form-label" %>
          <%= f.text_field :longitude, class: "form-control", required: true, type: "number", step: "any", pattern: "\\d*" %>
        </div>
        <div class="form-group mb-3">
          <%= f.label :categories_id, class: "form-label" %>
          <%= f.collection_select :categories_id, Category.all, :id, :category_name, { prompt: "Select a category" }, class: "form-control", required: true %>
        </div>
        <div class="form-group mb-3">
        <span class="text-danger">*</span>
          <%= f.label :cover_image, class: "form-label" %>
          <%= f.file_field :cover_image, multiple: true, class: "form-control", accept: "image/*" %>
        </div>
        <div class="d-grid gap-2">
          <%= f.submit "Save", class: "btn btn-outline-success btn-lg" %>
        </div>
      <% end %>
    </div>
    <div class="col-12 text-center mt-3">
      <%= link_to '[ Back to Restaurants listing ]', restaurants_path, class: "btn btn-outine-dark" %>
    </div>
  </div>
</div>
