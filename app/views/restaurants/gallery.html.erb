<div class="container">
  <%= render 'shared/flash' %>
  <%= render 'shared/errors', obj: @restaurant %>
  <div class="row justify-content-center">
    <div class="col-4 my-3">
      <%= form_with(url: restaurant_image_path, method: :post) do |f| %>
        <div class="input-group">
          <%= f.file_field :cover_image, multiple: true, class: "col-2 form-control", accept: "image/*" %>
          <%= f.submit "Add Image", class: "btn btn-outline-warning" %>
        </div>
      <% end %>
    </div>
  </div>
  <div class="container text-center my-3">
    <%= link_to '[Back to Restaurant]', restaurant_path(@restaurant), class: "text-center text-danger" %>
  </div>
  <div class="d-flex flex-row flex-wrap justify-content-center">
    <% @restaurant.cover_image.each_with_index do |picture, i| %>
      <div class="card m-2" style="width: 18rem;">
        <%= image_tag picture, class: "card-img-top img-fluid", style: "height: 250px;" %>
      </div>
    <% end %>
  </div>
</div>
