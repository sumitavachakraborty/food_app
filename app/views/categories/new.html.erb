<div class="container my-3">
  <%= render 'shared/flash' %>
  <div class="row justify-content-center">
    <div class="col-10" >
      <%= render 'shared/errors', obj: @category%>
      <%= form_with(model: @category, class: "shadow p-3 mb-3 bg-white rounded",local: true) do |f| %>
        <div class="form-group row mb-3">
          <%= f.label :category_name, class: "col-2 col-form-label" %>
          <div class ="col-10">
            <%= f.text_field :category_name, class: "form-control" , placeholder: "Enter the Category"%>
          </div>
        </div>
        <div class="d-flex justify-content-center">
          <%= f.submit class: "btn btn-outline-success btn-lg"%>
        </div>
      <% end %>
    </div>
  </div>
</div>
